{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps && cd backend/frontend && npm install",
  "buildCommand": "cd backend/frontend && npm run build",
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "frontend/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "includeFiles": "**"
    }
  }
}
